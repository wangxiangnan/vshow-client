.word-bg{position: fixed; top: 0; right: 0; bottom: 0; left: 0; background: center top no-repeat; background-size: 100%; background-attachment: fixed; z-index: 0; opacity: .2}
.word{position: relative; z-index: 2;}
.word-title{padding: 20px 0; border-bottom: 1px solid #f1f1f1;}
.menu{display: flex; justify-content: space-between; flex-flow: row wrap; padding: 0 30rpx;}
.menu-item{width: 328rpx; height: 328rpx; color: #ff2e57; line-height: 328rpx; background-color: #f2f2f2; margin: 34rpx 0; border-radius: 8px; overflow: hidden;}
.menu-item-img{
  width: 100%;
}