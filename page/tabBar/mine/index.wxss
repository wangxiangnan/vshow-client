.mine_bg{background:#f3f4f6 50% 50% no-repeat; background-size: cover; z-index: -1}
.mine-hd{padding: 80rpx 0 10rpx;}
.mine-hd view{margin-top: 12px;}
.avatar{width: 200rpx; height: 200rpx; border-radius: 50%; border: 1px solid #fff;}
.mine-bd{margin-top: 30rpx;}
.mine-list{padding: 0 20px; display: flex; justify-content: space-between; flex-wrap: wrap;}
.mine-item{width: 48.5%; height: 200rpx; -webkit-border-radius: 8px; border-radius: 8px; background-color: #fe6a6a; margin-top: 9px; opacity: .9; box-shadow: 2px 2px 4px rgba(0,0,0,.2);}
.item_active{opacity: .5}
.ani_active{background: eef10c; color: #000;}
.list_text{bottom: 10px; left: 10px}
.item_icon{
  width: 80rpx;
  top: 10px;
  left: 10px;}
.login_btn{
  background: none;
}
.login_btn:after{
  width: 0;
  height: 0;
}
.contact_btn{position: absolute; top: 0; left: 0;bottom: 0; right: 0; opacity: 0;}