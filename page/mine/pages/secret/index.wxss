page, .map_box, .map, .err_tips{
  width: 100%;
  height: 100%;
}
.map{

}
.cover_hd{
  overflow:visible;

}
.card{
  margin: 5.3% 5.3% 0;
  padding: 4.53% 4.8%;
  background-color: #fff;
  -webkit-box-shadow:0 2px 20px 0 rgba(0,0,0,0.30);
  box-shadow:0 2px 20px 0 rgba(0,0,0,0.30);
  border-radius:10px;
  border: 1px solid #eee;
}
.profile{
  display: -webkit-flex;
  display: flex;  
}
.profile_hd{
  width: 70px;
  height: 70px;
  position: relative;
  margin-right: 3.01%;
}
.avatar_mask{
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 2;
}
.avatar{
  position: absolute;
  z-index: 1;
  width: 100%;
  height: 100%;
}
.boy_bg{
  background-color: #5ec8ef;
}
.profile_bd{
  flex: 1;
  color:#9b9b9b;
}
.profile_main{
  position: relative;
}
.profile_title{
  font-size:20px;
  color:#4a4a4a;
  line-height: 1.2;
  max-width:70%;
  text-overflow:ellipsis;

}
.profile_time{
  font-size:14px;
  line-height: 1.4;
}
.profile_sub{
  margin-top: 11px;
}
.profle_desc{
  font-size:12px;
  white-space: normal;
  line-height: 1.3;
}
.profile_imgs{
  margin-top: 18px;
  display: flex;
  justify-content: space-between;
}
.profile_img{
  width: 32.6%;
  margin-right: 1.1%;
}
.profile_img:last-child{
  margin-right: 0;
}
.btn_chat{
  position: absolute;
  top: 0;
  right: 0;
  font-size:16px;
  line-height: 1.7;
  padding: 0 12px;
  color:#ffffff;
  background:#fa5654;
  border-radius: 14px;
}


.cover_ft{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
}
.arc_mask{
  position: relative;
}
.arc_white_img{
  width: 100%;
  height:45px;

}
.btn_position{
  position: absolute;
  top: 0;
  right: 20px;
  width: 46px;
  height: 46px;
}
.icon_arrow{
  position: absolute;
  left: 50%;
  top: 8px;
  transform: translateX(-50%);
  width: 17px;
  height: 10px;
}
.cover_menu{
  position: relative;
  padding-bottom: 30px;
  background-color: #fff;
  -webkit-transition: height 10s;
  transition: height 10s;
}
.btn_send{
  position: relative;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 100px;
  height: 100px;
  border-radius: 100%;
  background:#f5a623;
}
.icon_pen, .btn_send_text{
  position: absolute;
  left: 50%;
  top: 0;
  transform: translateX(-50%);
}
.icon_pen{
  top: 26px;
  width: 16px;
}
.icon_pen:before{
  content: '';
  position: absolute;
  bottom: 2px;
  left: 0;
  right: 0;
  border-top: 2px solid #fff;
}
.btn_send_text{
  top: 54px;
  font-size:18px;
  color:#ffffff;
}

.btn_share, .btn_msg{
  position: absolute;
  bottom: 18px;
}

.btn_share{
  left: 20px;
}
.icon_share{
  width: 17px;
  height: 19px;
}

.btn_msg{
  right: 20px;
}
.icon_msg{
  width: 24px;
  height: 22px;
}

.move{
  height: 0;
}

/* 不支持cover-view弹出提示 */
.err_tips{
  display: flex;
  justify-content: center;
  align-items: center
}
