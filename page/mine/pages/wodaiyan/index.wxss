.preview{
  position: relative;
  margin: 3% 3% 4%;
}
.preview-img{
  width: 100%;
}
.preview-cover{
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}
.app-name{
  position: absolute;
  right: 9px;
  top: 9px;
  width: 80px;
  height: 17px;
  color: #fff;
  font-size: 11px;
  text-align: center;
  line-height: 17px;
  background-color: rgba(0,0,0,.5);
}
.qrcode{
  position: absolute;
  left: 7px;
  bottom: 6px;
  width: 73px;
  height: 73px;

}
.motto{
  position: absolute;
  left: 99px;
  bottom: 11px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 145px;
  height: 62px;
  font-size: 18px;
  color: #fff;
  border: 1px solid #7d664f;
  background-color: rgba(0,0,0,.26);

}
.btns{
  margin-top: 30px;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.btns .btn{
  font-size: 17px;
  line-height: 2.35em;
  height: 2.35em;
  width: 44%;
  text-align: center;
  border: 1px solid #c73564;
  border-radius: 20px;

}
.btn-replace{
  color: #c73564;
}
.btn-preview{
  color: #fff;
  background-color: #c73564;
}
.btn-hover{
  opacity: .8;
}