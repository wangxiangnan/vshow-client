<view class="daiyan">
  <view class="preview">
    <image class="preview-img" src="{{ bgUrl }}" mode="widthFix" />
    <view class="preview-cover">
      <text class="app-name">{{appNameText}}</text>
      <image class="qrcode" src="{{ qrcodeUrl }}" mode="widthFix" />
      <view class="motto">
        <text>没有你的地方</text>
        <text>去哪都是远方</text>
      </view>
    </view>
  </view>

  <view class="btns">
    <view class="btn-replace btn" hover-class='btn-hover' bindtap="onRepalce">换个图片</view>
    <view class="btn-preview btn" hover-class='btn-hover' bindtap="onPreview">预览图片</view>
  </view>
</view>

<canvas style="width: {{canvasWidth}}px; height: {{canvasHeight}}px; position: absolute; left: -1000px;" canvas-id='canvas'></canvas>
