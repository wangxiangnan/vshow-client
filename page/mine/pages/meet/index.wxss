.find_box, .find_bg{
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  overflow: hidden;
}
.find_bg{
  background-color: #f6f5f1;
  z-index: -1
}
.find_box{
  padding: 2.66% 2.93%;
}
.find{
  position: relative;
  height: 100%;
}

.find_bd{
  height: 82%;
  position: relative;
}
.card{
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: #fff;
  border-radius: 8px;
  box-shadow: 1px 1px 4px rgba(0,0,0,.4);
  overflow: hidden;
}
