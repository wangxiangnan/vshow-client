.card_info{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
}
.card_info_text{
  margin-left: 2.55%;
  margin-top: 3.97%;
  display: inline-block;
  padding: 6px 30px 6px 10px;
  font-size: 12px;
  color: #fff;
  background-color: rgba(0,0,0,0.5);
  background-repeat: no-repeat;
  background-size: auto 46%;
  background-position: 90% 50%;
  border-radius: 8px;
}
.islike_tips{
  position: absolute;
  top: 106%;
  width: 184rpx;
  height: 184rpx;
  border-radius: 50%;
  background-position: 50% 50%;
  background-size: cover;
}
.icon_like{
  left: 0;
  margin-left: 2.55%;
}
.icon_unlike{
  right: 0;
  margin-right: 2.55%;
}
.card_avatar{
  height: 81%;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: 50% 50%;

}
.card_texts{
  height: 19%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 15px;
}
.find_ft{
  height: 18%;
}
.find_ft .btns{
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.find_ft .btn{
  width: 52px;
  height: 52px;
  border-radius: 50%;
  background-color: #fff;
  background-repeat: no-repeat;
  background-size: 80%;
  background-position: 50% 50%;
}
.btn:last-of-type{
  margin-left: 19.8%
}
.btn_hover{
  opacity: .8;
}
.btn_home{
  position: absolute;
  right: 0;
  bottom: 0;
  width: 38rpx;
  height: 38rpx;
  background-repeat: no-repeat;
  background-size: 100%;
  background-position: 50% 50%;
}
.tocenter{
  -webkit-animation: tocenter .5s forwards alternate;
          animation: tocenter .5s forwards alternate;
      
}
.swipeleft{
  -webkit-animation: swiperleft .5s forwards alternate;
          animation: swiperleft .5s forwards alternate;
}
.swiperight{
  -webkit-animation: swiperright .5s forwards alternate;
          animation: swiperright .5s forwards alternate;
}
@-webkit-keyframes tocenter {
  to {
    -webkit-transform: translate(0, 0);
            transform: translate(0, 0);
  }
}
@keyframes tocenter {
  to {
    -webkit-transform: translate(0, 0);
            transform: translate(0, 0);
  }
}
@-webkit-keyframes swipeleft {
  to {
    -webkit-transform: translate(-140%, 10%);
            transform: translate(-140%, 10%);
  }
}
@keyframes swipeleft {
  to {
    -webkit-transform: translate(-140%, 10%);
            transform: translate(-140%, 10%);
  }
}
@-webkit-keyframes swiperight {
  to {
    -webkit-transform: translate(140%, 10%);
            transform: translate(140%, 10%);
  }
}
@keyframes swiperight {
  to {
    -webkit-transform: translate(140%, 10%);
            transform: translate(140%, 10%);
  }
}
