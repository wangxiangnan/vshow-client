.item{
  display: -webkit-flex;
  display: flex;
  align-items: center;
  padding: 2.66%;
  position: relative;
}
.item:before{
  content: '';
  position: absolute;
  bottom: 0;
  right: 0;
  left: 18.6%;
  height: 1px;
  border-bottom: 1px solid #d3d3d3
}
.panel_hd{
  width: 50px;
  height: 50px;
  margin-right: 2.5%;
}
.panel_hd_thumb{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.panel_bd{
  -webkit-flex: 1;
  -webkit-box-flex: 1;
  flex: 1;
  overflow: hidden;
}
.panel_title{
  display: flex;
  justify-content: space-between;
  font-size: 15px;
  line-height: 1.4
}
.panel_desc{
  font-size: 14px;
  color: #898989;
  line-height: 1.4;
  width: 92%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.panel_title_time{
  color: #898989
}
.loadmore_tips{
  margin-top: 5.3%;
  text-align: center;
  font-size: 14px;
  color: #787878;
}