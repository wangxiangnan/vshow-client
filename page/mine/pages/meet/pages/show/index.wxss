.card{
  position: relative;
}
.card_bg{
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: -1;
  background-color: #eee;
}
.card_bd{
  
}
.img_box{
  padding-top: 100%;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: 50% 50%
}
.card_ft{
  background-color: #fff;
}
.user_info{
  display: flex;
  align-items: center;
  padding: 4%;
  border-bottom: 1px solid #f1f1f1;
}
.user_info_left{
  flex: 1;
}
.user_name{
  display: inline-block;
  padding-right: 22px;
  font-size: 17px;
  color: #000;
  background-position: 100% 50%;
  background-repeat: no-repeat;
  background-size: auto 70%
}
.info_tips{
  font-size: 14px;
  color: #898989;
}
.user_edit{
  margin-left: 10px;
  width: 45px;
  line-height: 24px;
  text-align: center;
  font-size: 12px;
  color: #898989;
  background-color: #f1f1f1;
}
.saw_info{
  display: flex;
  align-items: center;
  padding: 4%;
  color: #898989;
  font-size: 15px;
}
.saw_text{
  flex: 1;
  padding-left: 32px;
  background-position: 0% 50%;
  background-repeat: no-repeat;
  background-size: auto 100%;
}
.highlight{
  color: #f72f2f;
}
.share_area{
  font-size: 12px;
  color: #f72f2f;
  padding-left: 23px;
  background-position: 0% 50%;
  background-repeat: no-repeat;
  background-size: auto 100%;
}