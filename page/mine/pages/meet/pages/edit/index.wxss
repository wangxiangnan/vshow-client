

.photowall{
  
}
.photowall_row{
  display: -webkit-flex;
  display: flex;
  padding-left: 1px;
  padding-right: 1px;
}

.photo{
  background-color: #f0f0f0;
  background-repeat: no-repeat;
  background-position: 50% 50%;
  background-size: 22.6%; 
}
.photowall_mainrow .main_photo{
  padding-top: 66.4%;
  padding-right: 66.4%;
  margin-right: 1px;
}

.photowall_mainrow .sub_photos{
  flex: 1;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
}
.photowall_mainrow .sub_photo{
  flex: 1;
}
.photowall_mainrow .sub_photo:first-child{
  margin-bottom: 1px
}

.photowall_subrow{
  margin-top: 1px;
}
.photowall_subrow .photo{
  flex: 1;
  padding-top: 33%;
  margin-right: 1px;
}
.photowall_subrow .photo:last-child{
  margin-right: 0;
}

.userinfo_row{
  padding: 4.5% 4%;
  font-size: 15px;
}
.userinfo_row:first-child{
  border-bottom: 1px solid #f0f0f0
}
.label_name{
  margin-right: 7.4%;
  color: #888;
}
.label_cont{
  color: #000;
}

.sub_edit{
  margin-top: 8%;
}
.btn{
  margin-left: 8%;
  margin-right: 8%;
  border-radius: 8px;
  color: #f72f2f
}
.btn::after{
  border-color: #f72f2f;
  border-radius: 16px;
}
.btn_hover{
  background-color: #fff;
  opacity: .8
}