<form class="letter_form" bindsubmit="sendLetter" report-submit>
    <view class="letter_box bgf">
        <textarea class="letter"
         maxlength="-1"
         focus
         name="letter" 
         value=""
         placeholder="请输入你的留言" />
    </view>

    <view class="btns">
        <button class="btn" loading="{{isLoading}}" disabled="{{isDisabled}}" type="primary" form-type="submit">发送</button>
    </view>
</form>