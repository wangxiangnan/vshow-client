page{
  background-color: #eee;
}
page,
.suitable{
  height: 100%;
}
.suitable-card-bg{
  display: flex;
  align-items: center;
  /* padding-top: 4%; */
  height:80%;
  box-sizing:border-box;

}
.suitable-card{
  margin-left: auto;
  margin-right: auto;
  position: relative;
  border-radius: 6px;
  overflow: hidden;
}
.suitable-card .banner{
  width: 100%;
}
.movable-area{
  position: absolute;
  top: 0;
  left: 0;  
}
.movable-view{
  display: flex;
  flex-direction: row;
  align-items: center;
  position: absolute;
  top: auto;
  left: auto;
  bottom: 0;
  right: 0;
  width: 237px;
  height: 59px;
  font-size: 23px;
  color: #fff;
  background-color: rgba(0,0,0, .5);
}
.tips-text{
  margin-left: 10px;
}
.qrcode{
  width: 50px;
  margin-left: 8px;
}

.suitable-tips,
.suitable-btns{
  /* margin-top: 8%; */
}
.suitable-tips{
  font-size: 20px;
  line-height: 2em;
  height: 2em;
  color: #7fe8e2;
  white-space: nowrap;
  overflow: hidden;
}
.suitable-btns{
  height:20%;
  box-sizing:border-box;

  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-around;
  /*padding-top: 3%;
  padding-bottom: 3%;*/
}
.btn-replace,
.btn-preview{
  font-size: 15px;
  line-height: 2.6em;
  height: 2.6em;
  width: 41%;
  text-align: center;
  border: 1px solid #1aad19;
  border-radius: 20px;
}
.btn-replace{
  color: #1aad19;
  background-color: #fff
}
.btn-preview{
  background-color: #1aad19;
  color: #fff;
}
.btn-hover{
  opacity: .8;
}
