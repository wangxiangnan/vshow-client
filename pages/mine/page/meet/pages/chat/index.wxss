page{
  background-color: #f0f0f0;
}
page, .chat, .chat_cont, .chat_list{
  height: 100%;
}
.chat_list{
  box-sizing: border-box;
  padding: 5.3% 1.3% 51px;
}
.chat_item_l{   /*左侧对话框*/

}
.chat_item_r{   /*右侧对话框*/

}
.chat_item{
  display: flex;
  flex-direction: row;
  margin-bottom: 3.3%;
}
.chat_item_thumb{
  display: inline-block;
  width: 44px;
  height: 44px;
  border-radius: 50%;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: 50% 50%;
}

.chat_item_bd{
  overflow: hidden;
  max-width:70%;
  width:70%;
}

.chat_item_cont{
  float: left;
  position: relative;
  box-sizing: border-box;
  margin-left: 15px;
  padding: 15px 13px;
  font-size: 14px;
  border-radius: 8px;
  background-color: #fff;
}
.chat_item_cont::before{
  content: '';
  position: absolute;
  left: 0;
  top: 29%;
  border: 6px solid transparent;
  border-right-color: #fff;
  transform: translate(-100%, 0)
}
.chat_item_r{
  flex-direction: row-reverse;
}
.chat_item_r .chat_item_cont{
  float: right;
  background-color: #f55a43;
  color: #fff;
  margin-right: 15px;
  margin-left: 0;
}
.chat_item_r .chat_item_cont::before{
  left: auto;
  right: 0;
  border-right-color: transparent;
  border-left-color: #f55a43;
  transform: translate(100%, 0)
}

.controller{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  box-sizing: border-box;
  height: 51px;
  padding-left: 15px;
  padding-right: 15px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  border-top: 1px solid #aeacab
}
.input_box{
  flex: 1;
  box-sizing: border-box;
  font-size: 15px;
  border: 1px solid #aeacab;
  border-radius: 4px;
  padding-left: 5px;
  padding-right: 5px;
}
.chat_text{
  height:2em;
  min-height:2em;
  line-height:2em;

}
.btn_img{
  margin-left: 15px;  
  width: 28px;
  height: 23px;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: 50% 50%;
}