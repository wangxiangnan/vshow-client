<view class="container">
  <view class="profile">
    <view class="info">
      <view class="user_avatar" style="background-image: url({{ userAvatarUrl }})"></view>
      <view class="user_name info_text">铁锤妹妹</view>
      <view class="user_edit info_text">点击查看/编辑</view>
    </view>
  </view>

  <view class="set_box">
    <view class="fn_list">
      <view class="fn_item btn {{ item.isOpen? 'fn_open': '' }} {{ item.iconClass }}" wx:for="{{ fnItem }}">
        <text>{{ item.text }}</text>
      </view>
    </view>
  </view>
</view>
