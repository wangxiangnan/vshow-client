.result{
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}
.result_bg{
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: -1;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: 50% 50%;
  -webkit-filter:blur(60px);
  filter:blur(60px);
}
.result_bg::before{
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(255,255,255,.7);
}
