page, .test{
  height: 100%;
  overflow: hidden;
}

.test{
  display: flex;
  flex-direction: column;
}
.quiz-area, .ask-area{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  
}
.line{
  height: 2px;
  background: #fff;
}

.quiz-area{
  background-color: #a8cc50
}
.ask-area{
  background-color: #f66687
}

.btn-quiz, .btn-ask{
  width: 120px;
  height: 120px;
  line-height: 120px;
  text-align: center;
  border-radius: 50%;
  font-weight: 600;
  box-shadow: 1px 1px 4px #fff;
  opacity: .8
}
.btn-quiz{
  background-color: #fff;
  color: #000;
  box-shadow: 1px 1px 4px #000 
}

.btn-ask{
  background-color: #8e8275;
  color: #fff
}
.btn-hover{
  opacity: 1
}