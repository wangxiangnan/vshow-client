.mood-hd{
  display: flex;
  justify-content: flex-end;
  padding: 12px 10px;
  background-color: #f8f8f8;
  position: relative;
}
.mood-hd view{
  font-size: 18px;
  font-weight: 500;
}
.btn-post{
  color: #709cfe;
  margin: 0;
  padding: 0;
  background: none;
  line-height: normal;
}
.btn-post:after{
  display: none;
}


.mood-bd{
  margin-top: 5px;
}

.text-box{
  padding: 10px;
  position: relative;
}
.img-box:after, .text-box:after, .mood-hd:after{
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  border-bottom: 1rpx solid #cbcbcb;
}
.img-box:after,.text-box:after{
  border-color: #e0e0e0;
}
.textarea{
  width: 100%;
  font-size: 14px;
}
.text-tools{
  padding: 10px 0 0;
  display: flex;
  justify-content: space-between;
  font-size: 13px;
  color: #99a5c2;
}
.tool-pos{
  color: #000
}
.tool-text{
  min-width: 90px;
  text-align: right
}
.img-box{
  padding: 10px;
  margin-top: 5px;
  position: relative;
  display: flex;
}
.img-item{
  width: 105px;
  height: 105px;
  background-color: #f2f2f2;
  margin-right: 10px;
  background-size: 30%;
  background-repeat: no-repeat;
  background-position: 50% 50%;
  overflow: hidden;
}
.img{
  width: 100%;
  height: 100%;
}