.weui-cells {
  position: relative;
  margin-top: 1.17647059em;
  background-color: #FFFFFF;
  line-height: 1.41176471;
  font-size: 17px;
}

.weui-cells__title {
  margin-top: .77em;
  margin-bottom: .3em;
  padding-left: 15px;
  padding-right: 15px;
  color: #999999;
  font-size: 14px;
}
.weui-cells::before {
  content:" ";
  position:absolute;
  left:0;
  top:0;
  right:0;
  height:1px;
  border-top:1rpx solid #D9D9D9;
  color:#D9D9D9;

}

.weui-cells:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1rpx solid #D9D9D9;
  color: #D9D9D9;
}

.weui-cells_after-title {
  margin-top: 0;
}

.weui-cell {
  padding: 10px 15px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}

.weui-cell_input {
  padding-top: 0;
  padding-bottom: 0;
}

.weui-cell__bd {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.weui-input {
  height: 2.58823529em;
  min-height: 2.58823529em;
  line-height: 2.58823529em;
}

.weui-textarea {
  display: block;
  width: 100%;
}
.btn-area{
  margin:1.17647059em 15px 0.3em;
}


.tips{
  position: absolute;
  top: 5px;
  right: 5px;
  z-index: 10;
}

.icon-tips{
  position: absolute;
  right: 0;
  top: 0;
  width: 30px;
  height: 30px;
  z-index: 10;
  background: url(https://vvshow.site/images/micapp/help.png) center center no-repeat;
  background-size: cover;
}
.tips-bg{
  background-color: rgba(0,0,0,.5);

}
.tips-cont{
  position: fixed;
  top: 20%;
  left: 8px;
  right: 8px;
  background: #f8f8f8;
  border-radius: 8px;

}
.tips-hd{
  line-height: 40px;
  height: 40px;
  font-size: 18px;
  color: #000;
  font-weight: 700;
  text-align: center;
  position: relative;
}
.tips-hd:after{
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  border-bottom: 1px solid #e1e1e1
}
.tips-bd{
  padding: 0 10px 10px;
}
.tips-item{
  margin-top: 10px;
}

.tips-item-bd{
  margin-top: 5px;
  padding: 0 4px;
  font-size: 14px;
  line-height: 1.6;
}