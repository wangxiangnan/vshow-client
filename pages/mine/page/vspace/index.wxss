page{
  background-color: #ececec;
  font-size: 16px;
}
.profile{
  position: relative;
  padding-top: 56.25%;
  background-color: #7c878e;
}
.profile-info{
  position: absolute;
  left: 10px;
  bottom: 10px;
  z-index: 2;
  display: flex;
  align-items: center;
}
.avatar{
  margin-right: 10px;
}
.avatar-img{
  width: 60px;
  height: 60px;
  border: 3px solid #fff;
  box-shadow: 0 0 3px 1px rgba(0,0,0,.25);
  background-color: #ccc;
  border-radius: 50%;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: 50% 50%;
}
.user-name{
  font-size: 18px;
  color: #fff;
}

.cover-img{
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1;
  background-size: cover;
  background-repeat: no-repeat;
}

.nav{
  display: flex;
  padding: 10px 0;
  border-bottom: 1px solid #ccc;
}
.nav-item{
  flex: 1;
  position: relative;
  color: #000;
  text-align: center;
}
.nav-item:after{
  content: '';
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width: 1rpx;
  background-color: #ddd;
}
.nav-item:last-of-type:after{
  display: none;
}
.item-title{
  font-size: 16px;
}
.item-num{
  font-size: 14px;
}

.dataItem{
  margin-top: 15px;
  padding: 10px;
  background-color: #fff;
}
.dataItem:first-of-type{
  margin-top: 0;
}

.dataItem-hd{
  display: flex;
}

.dataItem-hd .avatar{
  margin-right: 8px;
}
.dataItem-hd .avatar-img{
  width: 36px;
  height: 36px;
  border-radius: 0;
  box-shadow: none;
}
.extra-info{
  line-height: 1.4;
  display:flex;
  flex-direction:column;
  justify-content:space-between;

}
.extra-name{
  font-size: 16px;
  color: #285c9d;
}
.extra-time{
  font-size: 14px;
  color: #aaaabc;
}
.dataItem-bd{
  padding-top: 10px;
}
.pub-img{
  margin-top: 5px;
  width: 100%;
  max-height: 500px;
  overflow: hidden;
}
.pub-img image{
  width: 100%;
}

.dataItem-ft{
  margin: 10px -10px -10px;
}

.address{
  font-size:14px;
  padding-left:10px;
  padding-bottom:5px;
  color:#285c9d;

}

.action{
  display: flex;
  justify-content: flex-end;
  position: relative;
}
.action:before, .action:after{
  content: '';
  position: absolute;
  left: 0;
  right: 0;
}
.action:before{
  top: 0;
  border-top: 1rpx solid #d5d5d5;
}
.action:after{
  bottom: 0;
  border-bottom: 1rpx solid #d5d5d5;
}
.comments{
  padding: 8px 10px;
}
.comment{
  line-height: 1.6;
  font-size: 14px;
}
.comment-name{
  color: #285c9d;
}
.comment-cont{
  font-size: 12px;
}
.btn-event{
  width: 44px;
  height: 44px;
  margin: 0;
  background-position: 50% 50%;
  background-size: 16px 16px;
  background-repeat: no-repeat;
  background: none;
  position: relative;
}
.btn-event:after{
  display: none;
}
.btn-event:before{
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 16px;
  height: 16px;
  transform: translate(-50%,-50%);
  background-image: url(https://vvshow.site/images/micapp/gb-chg170331175527@2x.png);
  background-size: 138px 126px;
}
.i-resport:before{
  background-position: -122px -51px;
}
.i-like:before{
  background-position: -122px -34px;
}
.i-coms:before{
  background-position: -122px -68px;
}




/*固定定位*/
.btn-send{
  position: fixed;
  left: 10px;
  bottom: 10px;
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background-position: 50% 50%;
  background-size: 80%;
  background-repeat: no-repeat;
}
.btn-send-hover{
  background-color: none;
  transform: scale(1.4)
}

.reply-box{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 3;
  background-color: #eaebed;
  padding: 8px;
  overflow: hidden;
  font-size: 16px;
}
.reply-bg{
  float: left;
  width: 76%;
  box-sizing: border-box;
  background-color: #fff;
  padding-left: 10px;
  padding-right: 10px;
}
.reply{
  box-sizing: border-box;
  width: 100%;
  line-height: 32px;
  height: 32px;

}
.btn-reply{
  float: right;
  line-height: 32px;
  height: 32px;
  margin: 0;
  padding: 0;
  width: 20%;
  box-sizing: border-box;
}
.reply-mask{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,.5);
  z-index: 2;
}

.weui-loadmore {
	width:65%;
	margin:1.5em auto;
	line-height:1.6em;
	font-size:14px;
	text-align:center;

}

.weui-loading {
	margin:0 5px;
	width:20px;
	height:20px;
	display:inline-block;
	vertical-align:middle;
	-webkit-animation:weuiLoading 1s steps(12, end) infinite;
	animation:weuiLoading 1s steps(12, end) infinite;
	background:transparent url(data:image/svg+xml;base64,) no-repeat;
	background-size:100%;

}
.weui-loadmore__tips {
  display:inline-block;
  vertical-align:middle;

}
.weui-loadmore_line {
  border-top: 1px solid #E5E5E5;
  margin-top: 2.4em;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}
.weui-loadmore__tips_in-line {
  position: relative;
  top: -0.9em;
  padding: 0 .55em;
  color: #999999;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}


.tips{
  position: absolute;
  top: 10px;
  right: 10px;
  z-index: 10;
}

.icon-tips{
  position: absolute;
  right: 0;
  top: 0;
  width: 30px;
  height: 30px;
  z-index: 10;
  background: url(https://vvshow.site/images/micapp/help.png) center center no-repeat;
  background-size: cover;
}
.tips-bg{
  background-color: rgba(0,0,0,.5);

}
.tips-cont{
  position: fixed;
  top: 20%;
  left: 8px;
  right: 8px;
  background: #f8f8f8;
  border-radius: 8px;

}
.tips-hd{
  line-height: 40px;
  height: 40px;
  font-size: 18px;
  color: #000;
  font-weight: 700;
  text-align: center;
  position: relative;
}
.tips-hd:after{
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  border-bottom: 1px solid #e1e1e1
}
.tips-bd{
  padding: 0 10px 10px;
}
.tips-item{
  margin-top: 10px;
}

.tips-item-bd{
  margin-top: 5px;
  padding: 0 4px;
  font-size: 14px;
  line-height: 1.6;
}
.del_item{
  line-height: 44px;
  margin-right: 10px;
}