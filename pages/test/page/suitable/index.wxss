page{
  background-color: #eee;
}
.suitable-card-bg{
  padding: 17px 17px 19px;
  background-color: #fff;
}
.suitable-card{
  position: relative;
  border-radius: 6px;
  overflow: hidden;
}
.suitable-card .banner{
  width: 100%;
}
.movable-area{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  
}
.movable-view{
  display: flex;
  flex-direction: row;
  align-items: center;
  position: absolute;
  bottom: 0;
  right: 0;
  padding: 6px 5px 6px 8px;
  font-size: 20px;
  color: #fff;
  background-color: rgba(0,0,0, .5);
}
.qrcode{
  width: 100rpx;
  margin-left: 7px;
}

.suitable-tips,
.suitable-btns{
  margin-top: 9px;
  background-color: #fff;
}
.suitable-tips{
  font-size: 21px;
  line-height: 2.52em;
  height: 2.52em;
  color: #7fe8e2;
  white-space: nowrap;
  overflow: hidden;
}
.suitable-btns{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding-top: 6%;
  padding-bottom: 9%;
}
.btn-replace,
.btn-preview{
  font-size: 21px;
  line-height: 2.19em;
  height: 2.19em;
  width: 37.33%;
  text-align: center;
  border: 1px solid #ade9ff;
  border-radius: 50px;
  box-shadow: 1px 1px 4px #ade9ff;
}
.btn-replace{
  color: #ade9ff;
}
.btn-preview{
  background-color: #ade9ff;
  color: #fff;
}
.btn-hover{
  opacity: .8;
}
