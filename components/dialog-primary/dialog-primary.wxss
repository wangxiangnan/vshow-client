@import "../../iconfont.wxss";
.dialog-primary{
  
}
.dialog-mask{
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0,0,0,.5);
}
.dialog-main{
  position: relative;
  box-sizing: border-box;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -60%);
  width: 75%;
  padding: 50rpx;
  background-color: #fff;
  text-align: center;
  border-radius: 10rpx;
}
.dialog-main .icon-btn_close{
  position: absolute;
  top: -90rpx;
  right: 0;
  width: 60rpx;
  height: 60rpx;
  font-size: 30rpx;
  text-align: center;
  line-height: 60rpx;
  color: #fff;
  border-radius: 50%;
  border: 1px solid #fff;
  opacity: .5;
}
.dialog-main .dialog-title{
  margin-bottom: 32rpx;
  font-size: 32rpx;
  line-height: 1;
  color: #000;
  font-weight: 500;
} 

.dialog-main .dialog-content .dialog-desc{
  font-size: 28rpx;
  line-height: 42rpx;
  color: #000;
}
.dialog-main .dialog-content .dialog-img-container{
  margin-top: 23rpx;
  padding: 0 6rpx;
  vertical-align: top;
  white-space: nowrap;
  overflow: hidden;
}
.dialog-main .dialog-content .dialog-img-wrap{
  display: inline-block;
  margin-right: 30rpx;
  width: 90rpx;
  height: 90rpx;
  background-color: #f5f5f5;
  border-radius: 50%;
  overflow: hidden;
}
.dialog-main .dialog-content .dialog-img-wrap:last-of-type{
  margin-right: 0;
}
.dialog-main .dialog-content .dialog-img{
  width: 100%;
  height: 100%;
  vertical-align: top;
}
.dialog-main .dialog-footer{
  margin-top: 50rpx;
  text-align: center;
}
.dialog-main .dialog-footer .btn{
  display: inline-block;
  padding: 0 42rpx;
  font-size: 30rpx;
  line-height: 50rpx;
  color: #999;
}
.dialog-main .dialog-footer .btn-cancel{
  margin-right: 90rpx;
}
.dialog-main .dialog-footer .btn-confirm{
  color: #FF4071
}