.couple-tabs{
  display: flex;
  line-height: 88rpx;
  border-bottom: 1px solid #e1e1e1;
}
.couple-tab{
  position: relative;
  flex: 1;
  font-size: 32rpx;
  color: #000;
  text-align: center;
  border-bottom: 4rpx solid transparent;
}
.couple-tab::before{
  position: absolute;
  content: '';
  top: 100%;
  left: 50%;
  margin-left: -18rpx;
  width: 36rpx;
  height: 4rpx;
  
}
.couple-tab.active{
  color: #FF4071;
}
.couple-tab.active::before{
  background-color: #FF4071;
}