image{
  vertical-align: top
}

.btn{
  position: relative;
}
.btn:before{
  position: absolute;
  left: 0;
  top: 50%;
  -webkit-transform: translate(0, -50%);
  transform: translate(0, -50%);
}
.i_msg:before, .i_swipe:before, .i_space:before, .i_set:before, .i_guide:before, .i_share:before{
  content: '';
  width: 18px;
  height: 18px;
  display: inline-block;
  background-size: 138px 126px;
  background-image: url(http://localhost/images/micapp/sprite@2x.png);
}
.i_swipe:before{
  background-position: 0 0;
}
.i_msg:before{
  background-position: 0 -18px;
}
.i_space:before{
  background-position: 0 -36px;
}
.i_set:before{
  background-position: 0 -54px;
}
.i_guide:before{
  background-position: 0 -72px;
}
.i_share:before{
  background-position: 0 -90px;
}